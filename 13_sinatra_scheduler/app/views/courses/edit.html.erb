<form class="" action="/courses/<%= @course.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>
    <label for="name">Course Name</label>
    <input type="text" name="course[name]" value="<%= @course.name %>">
  </p>
  <p>
    <label for="professor">Professor</label>
    <input type="text" name="course[professor]" value="<%= @course.professor %>">
  </p>
  <p>
    <label for="credits">Credits</label>
    <input type="number" name="course[credits]" value="<%= @course.credits %>">
  </p>
  <input type="submit" value="Submit">
</form>
